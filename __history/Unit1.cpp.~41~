void __fastcall TForm1::Edit4Change(TObject *Sender)
{
DM->ADOQuery1->Close();
DM->ADOQuery1->SQL->Clear();
DM->ADOQuery1->SQL->Add("SELECT * FROM Tsekh WHERE [NameT] LIKE '%"+Edit4->Text+"%'");
DM->ADOQuery1->Open();
}
//---------------------------------------------------------------------------

